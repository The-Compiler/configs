auto-reload yes
confirm-exit yes
reload-time 5
reload-threads 1


# vimlike bindings
unbind-key ^B
bind-key ^B pageup
unbind-key ^F
bind-key ^F pagedown
bind-key k up
bind-key j down
bind-key h quit
unbind-key l
bind-key l open
bind-key L toggle-show-read-feeds

color background color252 color234
color listnormal color252 color234
color listnormal_unread color150 color234
color listfocus color252 color237
color listfocus_unread color150 color237
color info color15 color239
color article color252 color234

notify-screen yes
notify-xterm yes
notify-beep yes

# kill archlinux packages we're not interested in
ignore-article "https://www.archlinux.org/feeds/packages/" "title !~ \"^(vim|poppler) \""

always-download "http://www.deimeke.net/dirk/blog/index.php?/feeds/index.rss2"
